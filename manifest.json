{
  "manifest_version": 3,
  "name": "LinkedIn Auto Connect & Message",
  "version": "1.0.3",
  "description": "Automate LinkedIn connections and personalized messages",
  "permissions": ["activeTab", "scripting", "tabs","alarms"],
  "host_permissions": ["https://www.linkedin.com/*", "https://localhost:7120/*"],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": [
        "content/linkedin-search-config.js",
        "content/sales-navigator-ui.js",
        "content/linkedin-search-ui.js",
        "content/linkedin-profile-automation.js",
        "content/linkedin-content.js"
      ],
      "css": ["content/content.css"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "LinkedIn Automation"
  },
  "icons": {
    "16": "assets/icons/logo.png",
    "48": "assets/icons/logo.png",
    "128": "assets/icons/logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "content/sales-navigator-ui.css",
        "content/sales-navigator-ui.js",
        "content/linkedin-search-ui.js",
        "content/linkedin-search-ui.css",
        "content/linkedin-search-ui.html",
        "content/linkedin-search-config.js",
        "content/linkedin-profile-automation.js"
      ],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}
